@{
    ViewData["Title"] = "Chatbot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Contact</h1>
                            <ol class="breadcrumb">
                                <li><a href="index.html">Home</a></li>
                                <li class="active">Contact</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 contant_form">
    <h2 class="text_align_center">SEND MESSAGER</h2>
    <div id="chat-container">
        <!-- Chat messages box -->
        <div id="chatBox" class="chat-box">
            <!-- Messages will be dynamically appended here -->
        </div>

        <!-- Input area -->
        <div id="input-container">
            <textarea id="userInput" placeholder="Nhập câu hỏi của bạn..." class="chat-input"></textarea>
            <button id="sendButton" class="chat-button">Gửi</button>
        </div>
    </div>

    <style>
        /* Container styling */
        #chat-container {
            width: 500px;
            margin: 20px auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
        }

        /* Chat messages box */
        .chat-box {
            width: 100%;
            height: 400px;
            padding: 10px;
            overflow-y: scroll;
            background-color: #f9f9f9;
            border-bottom: 1px solid #ddd;
            border-radius: 10px 10px 0 0;
        }

        /* Individual message styling */
        .chat-message {
            margin: 10px 0;
            padding: 8px;
            border-radius: 8px;
        }

            .chat-message.user {
                background-color: #cce5ff;
                text-align: right;
            }

            .chat-message.bot {
                background-color: #e2e3e5;
                text-align: left;
            }

        /* Input container styling */
        #input-container {
            display: flex;
            padding: 10px;
            background-color: #fff;
            border-radius: 0 0 10px 10px;
        }

        .chat-input {
            flex: 1;
            height: 50px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: none;
            font-size: 14px;
        }

        .chat-button {
            margin-left: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .chat-button:hover {
                background-color: #0056b3;
            }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sendButton = document.getElementById('sendButton');
            const userInput = document.getElementById('userInput');
            const chatBox = document.getElementById('chatBox');

            // Hàm thêm tin nhắn vào chat box
            const appendMessage = (sender, message) => {
                const messageHtml = `<div class="chat-message ${sender}"><strong>${sender === 'user' ? 'Bạn' : 'Bot'}:</strong> ${message}</div>`;
                chatBox.innerHTML += messageHtml;
                chatBox.scrollTop = chatBox.scrollHeight; // Tự động cuộn xuống cuối
            };

            // Hàm xử lý gửi tin nhắn
            const sendMessage = async () => {
                const message = userInput.value.trim();

                if (!message) {
                    alert('Vui lòng nhập câu hỏi!');
                    return;
                }

                // Hiển thị tin nhắn người dùng
                appendMessage('user', message);

                try {
                    const response = await fetch('/ChatBot/GetResponse', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(message) // Gửi tin nhắn của người dùng
                    });

                    if (!response.ok) {
                        throw new Error('Không thể kết nối với máy chủ.');
                    }
                    const data = await response.json();
                    appendMessage('bot', data); // Hiển thị tin nhắn của bot
                } catch (error) {
                    console.error('Error:', error);
                    appendMessage('bot', 'Có lỗi xảy ra, vui lòng thử lại sau.');
                } finally {
                    userInput.value = ''; // Xóa nội dung ô nhập sau khi gửi
                }
            };

            // Sự kiện click nút Gửi
            sendButton.addEventListener('click', sendMessage);

            // Sự kiện nhấn Enter trong ô nhập
            userInput.addEventListener('keydown', (event) => {
                if (event.key === 'Enter') {
                    sendMessage();
                }
            });
        });
    </script>


