                                    </div>
                                </div>

                                <style>
                                    /* Container styling */
                                    #chat-container {
                                        width: 500px;
                                        margin: 20px auto;
                                        border: 1px solid #ccc;
                                        border-radius: 10px;
                                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                                        font-family: Arial, sans-serif;
                                    }

                                    /* Chat messages box */
                                    .chat-box {
                                        width: 100%;
                                        height: 400px;
                                        padding: 10px;
                                        overflow-y: scroll;
                                        background-color: #f9f9f9;
                                        border-bottom: 1px solid #ddd;
                                        border-radius: 10px 10px 0 0;
                                    }

                                    /* Individual message styling */
                                    .chat-message {
                                        margin: 10px 0;
                                        padding: 8px;
                                        border-radius: 8px;
                                    }

                                        .chat-message.user {
                                            background-color: #cce5ff;
                                            text-align: right;
                                        }

                                        .chat-message.bot {
                                            background-color: #e2e3e5;
                                            text-align: left;
                                        }

                                    /* Input container styling */
                                    #input-container {
                                        display: flex;
                                        padding: 10px;
                                        background-color: #fff;
                                        border-radius: 0 0 10px 10px;
                                    }

                                    .chat-input {
                                        flex: 1;
                                        height: 50px;
                                        padding: 8px;
                                        border: 1px solid #ccc;
                                        border-radius: 5px;
                                        resize: none;
                                        font-size: 14px;
                                    }

                                    .chat-button {
                                        margin-left: 10px;
                                        padding: 10px 20px;
                                        background-color: #007bff;
                                        color: #fff;
                                        border: none;
                                        border-radius: 5px;
                                        cursor: pointer;
                                    }

                                        .chat-button:hover {
                                            background-color: #0056b3;
                                        }
                                </style>
                                <script>
                                    document.addEventListener('DOMContentLoaded', () => {
                                        const sendButton = document.getElementById('sendButton');
                                        const userInput = document.getElementById('userInput');
                                        const chatBox = document.getElementById('chatBox');

                                        // Hàm thêm tin nhắn vào chat box
                                        const appendMessage = (sender, message) => {
                                            const messageHtml = `<div class="chat-message ${sender}"><strong>${sender === 'user' ? 'Bạn' : 'Bot'}:</strong> ${message}</div>`;
                                            chatBox.innerHTML += messageHtml;
                                            chatBox.scrollTop = chatBox.scrollHeight; // Tự động cuộn xuống cuối
                                        };

                                        // Hàm xử lý gửi tin nhắn
                                        const sendMessage = async () => {
                                            const message = userInput.value.trim();

                                            if (!message) {
                                                alert('Vui lòng nhập câu hỏi!');
                                                return;
                                            }

                                            // Hiển thị tin nhắn người dùng
                                            appendMessage('user', message);

                                            try {
                                                const response = await fetch('/ChatBot/GetResponse', {
                                                    method: 'POST',
                                                    headers: {
                                                        'Content-Type': 'application/json'
                                                    },
                                                    body: JSON.stringify(message)
                                                });

                                                if (!response.ok) {
                                                    throw new Error('Không thể kết nối với máy chủ.');
                                                }

                                                const data = await response.json();
                                                appendMessage('bot', data);
                                            } catch (error) {
                                                console.error('Error:', error);
                                                appendMessage('bot', 'Có lỗi xảy ra, vui lòng thử lại sau.');
                                            } finally {
                                                userInput.value = ''; // Xóa nội dung ô nhập sau khi gửi
                                            }
                                        };

                                        // Sự kiện click nút Gửi
                                        sendButton.addEventListener('click', sendMessage);

                                        // Sự kiện nhấn Enter trong ô nhập
                                        userInput.addEventListener('keydown', (event) => {
                                            if (event.key === 'Enter') {
                                                sendMessage();
                                            }
                                        });
                                    });
                                </script>
